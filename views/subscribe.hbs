<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Greetings From Ireland | Home</title>
    <link rel="stylesheet" href="/style/style.css" />
    <script type="module" src="/js/home.mjs"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <div class="body-wrapper">

      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <div class="site-logo"><span>Greetings from Ireland</span></div>
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <main>

        {{#if email}}
          <h2>{{email}} is now subscribed</h2>
          <p class="system-font">But we're too Irish to actually bother you with
            anything. Enjoy your peace, and God bless.</p>
        {{else}}
          <h3>Oh Lord have mercy, something went wrong. Would ye try again?</h3>
        {{/if}}
        {{#if message}}
          <p class="system-font">{{message}}</p>
        {{/if}}
        <div class="hero">
          <a href="/">Home</a>
        </div>

      </main>

    </div>

    <footer>
      <div>
        Logo Image by
        <a
          href="https://pixabay.com/users/jorono-1966666/?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=2423859"
        >jorono</a>
        from
        <a
          href="https://pixabay.com//?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=2423859"
        >Pixabay</a>
      </div>

    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

  </body>
</html>